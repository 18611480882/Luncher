<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_727272"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/line1_layout"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/app_icon1"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/app_icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/app_icon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/app_icon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
    
    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/line1_layout"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/app_icon5"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/app_icon6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/app_icon7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:id="@+id/app_icon8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
</RelativeLayout>
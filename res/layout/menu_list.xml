<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_transaction"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/drawer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/drawer_list_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp" >

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/about_title_text"
                android:layout_below="@id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/drawer_list_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/share_tencentweibo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_tencentweibo_selector"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/share_qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_qq_selector" />

            <ImageButton
                android:id="@+id/share_qzone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_qzone_selector" />

            <ImageButton
                android:id="@+id/share_sinaweibo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_sinaweibo_selector" />

            <ImageButton
                android:id="@+id/share_wechat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/share_wechat_selector" />

            <ImageButton
                android:id="@+id/share_wechatmoments"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/share_wechatmoments_selector" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/drawer_list_bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:gravity="right"
            android:text="小主~奴才们还不知道呢"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/drawer_list_bottom"
            android:layout_below="@id/drawer_list_top"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingLeft="30dp" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>